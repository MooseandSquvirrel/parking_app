<%= form_tag search_path, :method => 'get' do %>
  <p>
    <center>
       <input name="search" type="search" placeholder="Search" class="input_search">
    </center>
  </p>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Login</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Licence plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.login %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.color %></td>
        <td><%= car.licence_plate %></td>
        <td><%= link_to 'Show', car, class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_car_path(car), class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-default btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
