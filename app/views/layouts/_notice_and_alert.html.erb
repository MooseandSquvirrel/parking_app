<% if notice %>
  <p class="alert alert-success alert-dismissible inside-notification no_margin">
    <button class="close" data-dismiss="alert" aria-hidden="true" type="button">×</button>
    <%= notice %>
  </p>
<% end %>
<% if flash[:alert] %>
  <p class="alert alert-danger alert-dismissible inside-notification no_margin">
    <button class="close" data-dismiss="alert" aria-hidden="true" type="button">×</button>
    <%= flash[:alert] %>
  </p>
<% end %>
<% if @car and @car.errors %>
  <% @car.errors.full_messages.each do |error| %>
    <p class="alert alert-danger alert-dismissible inside-notification no_margin">
      <button class="close" data-dismiss="alert" aria-hidden="true" type="button">×</button>
      <%= error %>
    </p>
  <% end %>
<% end %>
